<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel x:Name="panelControls">
            <Button x:Name="btnOpenFile" Content="Open File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="BtnParse_Click" />
            <Button x:Name="btnDownloadFile" Content="Download File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="BtnDownloadFile_Click" />
        </StackPanel>
        
        <TextBlock Name="txtProgress" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Progress" VerticalAlignment="Top" Width="454"/>

    </DockPanel>
</Window>
